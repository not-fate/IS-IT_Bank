    .btn {
        background: #007bff;
        color: #fff;
        padding: 10px 15px;
        font-size: 1rem;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        width: 100%;
        transition: background 0.3s;
    }

        .btn:hover {
            background: #0056b3;
        }

    .link {
        color: #007bff;
        text-decoration: none;
        font-size: 0.9rem;
    }

        .link:hover {
            text-decoration: underline;
        }

    .error {
        color: red;
        font-style: italic;
        font-size: 0.9rem;
        text-align: center;
    }
</style>
<div class="login_cont">
    <form id="login_form" method="post" class="form" accept-charset="utf-8">
        <!--<h2>Login</h2>-->
        <p>
            <label>Телефон</label><br />
            <input name="phone" value="@Model.Phone" pattern="[0-9]{8,12}"
                   title="Телефон должен состоять от 8 до 12 цифр"
                   required />
        </p>
        <p>
            <label>Пароль</label><br />
            <input type="password" name="password" required />
        </p>
        <input type="submit" value="Войти" class="btn" />
        <p class="error">@Model.Error</p>
        <p><a href="#" class="link" onclick="loginPage.show_register()">Регистрация</a></p>
    </form>

    <form id="register_form" method="post" class="form" accept-charset="utf-8">
        <!--<h2>Регистрация</h2>-->
        <p>
            <label>Телефон</label><br />
            <input name="phone" pattern="[0-9]{8,12}"
                   title="Телефон должен состоять от 8 до 12 цифр"
                   required />
        </p>
        <p>
            <label>Пароль</label><br />
            <input type="password" name="password" required />
        </p>
        <p>
            <label>Email</label><br />
            <input name="email" type="email" />
        </p>
        <p>
            <label>Имя</label><br />
            <input name="firstname" required />
        </p>
        <p>
            <label>Фамилия</label><br />
            <input name="lastname" required />
        </p>
        <input type="hidden" name="isregister" value="1" />
        <input type="submit" value="Создать" class="btn" />
        <p>
            <a href="#" class="link" onclick="loginPage.show_login()">Войти</a>, если вы уже зарегистрированы
        </p>
    </form>
</div>


